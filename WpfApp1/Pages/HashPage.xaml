<Page x:Class="InfoDefense.Pages.HashPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InfoDefense.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HashPage">

    <Grid>
        <DockPanel>
            <TextBox x:Name="InputBox" DockPanel.Dock="Top"/>
            <Button x:Name="HashButton" Content="GetHash" DockPanel.Dock="Top" Click="HashButton_Click"/>
            <TextBox x:Name="OutputBox" DockPanel.Dock="Bottom"/>
            <!--<TextBlock x:Name="ByteBlock" DockPanel.Dock="Bottom"/>-->
        </DockPanel>
    </Grid>
</Page>
